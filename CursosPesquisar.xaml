<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.CursosPesquisar"
             Title="Consulta de Cursos"
             BackgroundColor="#FF6347">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="12">
            <Label Text="Buscar Cursos"
                   FontSize="23"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Digite o Nome do Curso:" TextColor="White"/>
            <Entry x:Name="PesquisarCursoEntry" TextColor="Black"/>

            <Button Text="Localizar"
                    BackgroundColor="Maroon"
                    TextColor="White"
                    Clicked="OnPesquisarClicked" />

            <VerticalStackLayout x:Name="ResultadosPesquisaLayout" />

            <Button Text="Retornar"
                    BackgroundColor="#C9302C"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Clicked="OnVoltarButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
