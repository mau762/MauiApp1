<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Cursos"
             Title="Controle de Cursos"
             BackgroundColor="#FF4500">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="12">
            <Label Text="Gestão de Cursos"
                   FontSize="23"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Button Text="Buscar Cursos"
                    BackgroundColor="Maroon"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Clicked="OnPesquisarCursosClicked" />

            <Button Text="Novo Curso"
                    BackgroundColor="Maroon"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Clicked="OnAdicionarCursoClicked" />

            <Button Text="Excluir Curso"
                    BackgroundColor="Maroon"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Clicked="OnRemoverCursosClicked" />

            <Button Text="Retornar"
                    BackgroundColor="#C9302C"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Clicked="OnVoltarButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>