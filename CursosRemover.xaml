<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.CursosRemover"
             Title="Selecione Cursos para Remover"
             BackgroundColor="#FF5733">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="12">
            <Label Text="Excluir Cursos"
                   FontSize="22"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Cursos Disponíveis:" TextColor="White"/>
            <VerticalStackLayout x:Name="ListaRemoverCursosLayout">
                <HorizontalStackLayout>
                    <Label Text="1. Análise e Desenvolvimento" TextColor="White" VerticalOptions="Center"/>
                    <Button Text="Remover" BackgroundColor="Crimson" TextColor="White"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="2. Ciência da Computação" TextColor="White" VerticalOptions="Center"/>
                    <Button Text="Remover" BackgroundColor="Crimson" TextColor="White"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="3. Curso em Progresso" TextColor="White" VerticalOptions="Center"/>
                    <Button Text="Remover" BackgroundColor="Crimson" TextColor="White"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Button Text="Retornar"
                    BackgroundColor="#C9302C"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Clicked="OnVoltarButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>