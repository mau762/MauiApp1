<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.PeriodosRemover"
             Title="Remover Períodos"
             BackgroundColor="OrangeRed">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Remover Períodos"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="Períodos Existentes:" FontAttributes="Bold" TextColor="White"/>
            <VerticalStackLayout x:Name="ListaRemoverPeriodosLayout">
                <HorizontalStackLayout>
                    <Label Text="1° Período" TextColor="White" VerticalOptions="Center"/>
                    <Button Text="Excluir" BackgroundColor="#DC3545" TextColor="White"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="2° Período" TextColor="White" VerticalOptions="Center"/>
                    <Button Text="Excluir" BackgroundColor="#DC3545" TextColor="White"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="3° Período" TextColor="White" VerticalOptions="Center"/>
                    <Button Text="Excluir" BackgroundColor="#DC3545" TextColor="White"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Button Text="Voltar"
                    BackgroundColor="#D9534F"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="OnVoltarButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
