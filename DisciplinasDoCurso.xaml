<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.DisciplinasDoCurso"
             Title="Disciplinas do Curso"
             BackgroundColor="OrangeRed">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Disciplinas do Curso"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label x:Name="CursoLabel"
                   FontSize="18"
                   TextColor="White"
                   FontAttributes="Italic"
                   HorizontalOptions="Center"/>

            <VerticalStackLayout x:Name="DisciplinasLayout">
            </VerticalStackLayout>

            <Button Text="Voltar"
                    BackgroundColor="#D9534F"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="OnVoltarButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
