<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.DisciplinasPesquisar"
             Title="Pesquisar Disciplinas"
             BackgroundColor="OrangeRed">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Pesquisar Disciplinas"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="Nome da Disciplina:"
                   TextColor="White" />
            <Entry x:Name="PesquisarDisciplinaEntry" TextColor="#000"/>
            <Button Text="Pesquisar"
                    BackgroundColor="DarkRed"
                    TextColor="White"/>
            <VerticalStackLayout x:Name="ResultadosPesquisaLayout" />
            <Button Text="Voltar"
                    BackgroundColor="#D9534F"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="OnVoltarButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
