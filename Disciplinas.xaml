<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Disciplinas"
             Title="Gerencie suas Disciplinas"
             BackgroundColor="OrangeRed">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Gerenciar Disciplinas"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Button Text="Pesquisar Disciplinas"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="OnPesquisarDisciplinasClicked" />

            <Button Text="Adicionar Nova Disciplina"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="OnAdicionarDisciplinaClicked" />

            <Button Text="Remover Disciplinas"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="OnRemoverDisciplinasClicked" />

            <Button Text="Voltar"
                    BackgroundColor="#D9534F"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="OnVoltarButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

